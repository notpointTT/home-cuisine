<?xml version="1.0" encoding="UTF-8" ?>
<!--MyBatis的DTD约束-->
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hc.auth.user.core.mapper.UserMapper">

    <insert id="insertUser">
        insert into user (user_id, phone_num) values (#{userId}, #{phoneNum})
    </insert>

    <select id="queryByUsername" resultType="com.hc.auth.user.core.entities.UserEntity">
        select * from user where username = #{username}
    </select>

    <select id="queryByPhoneNum" resultType="com.hc.auth.user.core.entities.UserEntity">
        select * from user where phone_num = #{phoneNum}
    </select>

</mapper>