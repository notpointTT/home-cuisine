<?xml version="1.0" encoding="UTF-8" ?>
<!--MyBatis的DTD约束-->
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hc.auth.user.core.mapper.UserAddressMapper">


    <select id="addressList" resultType="com.hc.auth.user.core.entities.UserAddressEntity">
        select * from user_address where user_id = #{userId}
    </select>

    <select id="detail" resultType="com.hc.auth.user.core.entities.UserAddressEntity">
        select * from user_address where id = #{id}
    </select>


    <select id="resetOtherDefault">
        update user_address set is_default = 0
        where user_id = (select tt.ui from (
            select aa.user_id as ui from user_address aa
            where aa.id = #{id}
        ) tt ) and is_default = 1
    </select>

    <select id="setDefault">
        update user_address set is_default = 1
        where id = #{id}
    </select>

</mapper>